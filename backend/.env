# Backend Configuration for CodeRunner Project
PORT=5000
NODE_ENV=development

# MongoDB Configuration - Updated for your coderunner project
MONGODB_URI=mongodb://localhost:27017/coderunner

# JWT Secret - Change this in production!
JWT_SECRET=coderunner-super-secure-jwt-key-2024-change-in-production

# JWT Expiration
JWT_EXPIRE=7d

# Security
BCRYPT_ROUNDS=12

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100